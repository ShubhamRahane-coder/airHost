<% layout("layouts/boilerplate") %>

<div class="container-fluid px-md-5 mt-4" style="max-width: 1824px; margin:auto;">
    <div class="mb-4">
        <h2 class="fw-bold h4">Pending Review</h2>
    </div>

    <% if (listings && listings.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 row-cols-xl-5 g-3 g-md-4">
            <% for(let listing of listings) { %>
                <div class="col d-flex">
                    <a href="/listings/<%= listing._id %>" class="listing-link w-100">
                        <div class="card h-100 air-card shadow-sm border-0">
                            <div class="img-container">
                                <img src="<%= (listing.image && listing.image.length > 0) ? listing.image[0].url : 'https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1000&auto=format&fit=crop' %>" class="card-img-top listing-img" alt="<%= listing.title %>"
                                onerror="this.src='https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1000&auto=format&fit=crop'">
                                <div class="category-badge" style="background: #ff385c; color: #fff;">Unverified</div>
                                <% if(listing.price > 10000) { %>
                                    <div class="category-badge" style="left: auto; right: 8px;">Premium</div>
                                <% } %>
                            </div>
                            
                            <div class="card-body p-3 d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <p class="card-title mb-0 fw-bold text-truncate small"><%= listing.title %></p>
                                    <div class="d-flex align-items-center flex-shrink-0">
                                        <span class="material-symbols-outlined star-icon">person</span>
                                        <span class="extra-small fw-semibold ms-1"><%= listing.owner.username %></span>
                                    </div>
                                </div>
                                <p class="text-muted extra-small mb-2 text-truncate">
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                                <div class="mt-auto pt-2 border-top">
                                    <p class="card-text mb-0">
                                        <span class="fw-bold text-dark fs-6">&#8377; <%= listing.price.toLocaleString("en-IN") %></span> 
                                        <span class="text-secondary fw-light extra-small">night</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <div class="d-flex flex-column align-items-center justify-content-center py-5 mt-5">
            <span class="material-symbols-outlined text-muted" style="font-size: 4rem;">
                inventory_2
            </span>
            <h3 class="mt-3 fw-bold text-secondary">No listings to review</h3>
            <p class="text-muted">All clear! There are currently no listings awaiting verification.</p>
            <a href="/" class="btn btn-dark rounded-pill px-4 mt-2">Go Back Home</a>
        </div>
    <% } %>
</div>

<style>
    /* 100% Index.ejs CSS Match */
    @media (min-width: 1200px) { .row-cols-xl-5 > * { flex: 0 0 auto; width: 20% !important; } }
    .air-card { background-color: #fff; border: 1px solid #eeeeee !important; border-radius: 1rem !important; transition: all 0.3s ease-in-out; overflow: hidden; }
    .air-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08) !important; }
    .img-container { position: relative; aspect-ratio: 3 / 2; overflow: hidden; }
    .listing-img { width: 100%; height: 100%; object-fit: cover; }
    .category-badge { position: absolute; bottom: 8px; left: 8px; background: rgba(255, 255, 255, 0.9); color: #222; font-size: 9px; font-weight: 800; padding: 2px 8px; border-radius: 4px; text-transform: uppercase; }
    .extra-small { font-size: 0.78rem; }
    .listing-link { text-decoration: none !important; color: inherit; }
    .star-icon { font-size: 1rem; color: #717171; }
</style>