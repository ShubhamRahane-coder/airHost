<style>
    :root {
        --air-danger: #ff385c;
        --air-danger-soft: #fff1f3;
    }

    body {
        background-color: #fff;
        font-family: 'Circular', -apple-system, BlinkMacSystemFont, Roboto, sans-serif !important;
        scroll-behavior: smooth;
    }

    .bg-danger-soft { background-color: var(--air-danger-soft); }
    .tracking-widest { letter-spacing: 4px; font-size: 0.85rem; }
    
    .rounded-4 { border-radius: 1.25rem !important; }
    .rounded-5 { border-radius: 2.5rem !important; }

    /* Animations */
    .animate-fade-in { animation: fadeIn 1.2s ease-out; }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .hover-up { transition: 0.3s; }
    .hover-up:hover { transform: translateY(-10px); }

    .hover-lift { transition: 0.3s; cursor: pointer; }
    .hover-lift:hover { box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; transform: scale(1.02); }

    .image-stack { padding: 20px; }
    .main-img { transition: 0.5s; }
    .main-img:hover { transform: rotate(-1deg) scale(1.02); }

    .floating-card {
        position: absolute;
        bottom: 15%;
        left: -5%;
        z-index: 10;
        animation: float 4s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    /* Scrollspy Styling */
    #host-scroll-spy .nav-link {
        transition: 0.3s;
        border-radius: 20px;
        padding: 8px 16px;
    }
    #host-scroll-spy .nav-link:hover { color: var(--air-danger) !important; }
    #host-scroll-spy .nav-link.active {
        background-color: var(--air-danger) !important;
        color: white !important;
    }

    .btn-primary { background-color: #0d6efd; border: none; }
    .btn-danger { background-color: var(--air-danger); border: none; }
</style>

<script>
    // Initialize ScrollSpy for the sticky sub-nav
    document.addEventListener('DOMContentLoaded', () => {
        const spyElement = document.querySelector('#host-scroll-spy');
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('#host-scroll-spy .nav-link');

        window.addEventListener('scroll', () => {
            let current = "";
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (pageYOffset >= (sectionTop - 250)) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href').includes(current)) {
                    link.classList.add('active');
                }
            });
        });
    });
</script>