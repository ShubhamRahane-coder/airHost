<% layout("layouts/boilerplate") %>

<div class="new-listing-wrapper py-5">
  <div class="container" style="max-width:700px;">
    
    <div class="mb-4 text-center">
      <h2 class="fw-bold display-6">Create New Listing</h2>
      <p class="text-muted">Fill in the details to share your space with the world.</p>
    </div>

    <div class="card border-0 shadow-lg p-4 p-md-5 rounded-4 bg-white">
      <form action="/listings/createListing" method="POST"
            class="d-flex flex-column gap-4 needs-validation"
            novalidate>

        <div>
          <label for="title" class="form-label fw-bold air-label">Property Title</label>
          <input id="title" name="listing[title]" type="text"
                 class="form-control air-input" placeholder="e.g. Minimalist Studio in Downtown" required>
          <div class="invalid-feedback">Title is required</div>
        </div>

        <div>
          <label for="price" class="form-label fw-bold air-label">Price per night</label>
          <div class="input-group">
            <span class="input-group-text bg-white border-end-0 rounded-start-3 text-muted">â‚¹</span>
            <input id="price" name="listing[price]" type="number"
                   class="form-control air-input border-start-0" placeholder="0.00" required>
          </div>
          <div class="invalid-feedback">Price is required</div>
        </div>

        <div class="row g-3">
          <div class="col-md-8">
            <label for="location" class="form-label fw-bold air-label">Location</label>
            <input id="location" name="listing[location]" type="text"
                   class="form-control air-input" placeholder="City / Town" required>
            <div class="invalid-feedback">Location is required</div>
          </div>

          <div class="col-md-4">
            <label for="country" class="form-label fw-bold air-label">Country</label>
            <input id="country" name="listing[country]" type="text"
                   class="form-control air-input" placeholder="Country" required>
            <div class="invalid-feedback">Country is required</div>
          </div>
        </div>

        <div>
          <label for="image" class="form-label fw-bold air-label">Image URL</label>
          <input id="image" name="listing[image][url]" type="text"
                 class="form-control air-input" placeholder="Paste high-quality photo URL" required>
          <div class="invalid-feedback">Image URL is required</div>
        </div>

        <div>
          <label for="description" class="form-label fw-bold air-label">Description</label>
          <textarea id="description" name="listing[description]"
                    class="form-control air-input"
                    placeholder="Describe your property amenities and neighborhood..."
                    style="min-height:140px;"
                    required></textarea>
          <div class="invalid-feedback">Description is required</div>
        </div>

        <div class="p-3 bg-light rounded-4 border">
          <p class="small fw-bold text-muted mb-3 text-uppercase" style="letter-spacing: 1px;">Map Placement (Optional)</p>
          <div class="row g-3">
            <div class="col-6">
              <label for="lat" class="form-label small text-secondary">Latitude</label>
              <input id="lat" name="listing[lat]" type="number" step="any"
                     class="form-control air-input bg-white" placeholder="e.g. 19.0760">
            </div>
            <div class="col-6">
              <label for="lng" class="form-label small text-secondary">Longitude</label>
              <input id="lng" name="listing[lng]" type="number" step="any"
                     class="form-control air-input bg-white" placeholder="e.g. 72.8777 ">
            </div>
          </div>
        </div>

        <div class="d-flex gap-3 pt-2">
          <button type="reset" class="btn btn-outline-dark px-4 py-2 rounded-3 fw-semibold">Reset</button>
          <button type="submit" class="btn btn-black flex-grow-1 py-2 fw-bold">Create Listing</button>
        </div>

      </form>
    </div>
  </div>
</div>

<style>
  .new-listing-wrapper {
    background-color: #fcfcfc;
    min-height: 90vh;
  }

  .air-label {
    font-size: 0.9rem;
    color: #222;
    margin-bottom: 6px;
  }

  /* Custom Input Styling */
  .air-input {
    border-radius: 0.75rem !important;
    padding: 0.75rem 1rem;
    border: 1.5px solid #ddd;
    background: #fff;
    transition: all 0.2s ease;
  }

  .air-input:focus {
    border-color: #000;
    box-shadow: 0 0 0 4px rgba(0,0,0,0.05);
    outline: none;
  }

  .input-group-text {
    border: 1.5px solid #ddd;
    border-radius: 0.75rem 0 0 0.75rem !important;
  }

  /* Black Button Theme */
  .btn-black {
    background: #000;
    color: #fff;
    border: none;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .btn-black:hover {
    background: #222;
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.2);
    color: #fff;
  }

  /* Validation Colors */
  .was-validated .form-control:invalid {
    border-color: #ff385c;
  }
  .was-validated .form-control:valid {
    border-color: #000;
  }
</style>

<script>
(() => {
  const form = document.querySelector('.needs-validation');

  form.addEventListener('submit', event => {
    if (!form.checkValidity()) {
      event.preventDefault();
      event.stopPropagation();
    }
    form.classList.add('was-validated');
  });
})();
</script>