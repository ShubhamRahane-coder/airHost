<% layout("layouts/boilerplate") %>

<div class="container-fluid px-md-5 mt-4" style="max-width: 1824px; margin:auto;">
    <div class="mb-4">
        <h2 class="fw-bold h4">Explore Stays</h2>
    </div>

    <div id="listingContainer" class="row row-cols-1 row-cols-md-2 row-cols-lg-4 row-cols-xl-5 g-3 g-md-4">
        <% for(let listing of listings) { %>
            <div class="col d-flex">
                <a href="/listings/<%= listing._id %>" class="listing-link w-100">
                    <div class="card h-100 air-card shadow-sm border-0">
                        <div class="img-container">
                            <img src="<%= listing.image.url %>" 
                                 class="card-img-top listing-img" 
                                 alt="<%= listing.title %>"
                                 loading="lazy"
                                 onerror="this.src='https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1000&auto=format&fit=crop'">
                            
                            <div class="wishlist-icon">
                                <span class="material-symbols-outlined fs-5">favorite</span>
                            </div>

                            <% if(listing.price > 10000) { %>
                                <div class="category-badge">Premium</div>
                            <% } %>
                        </div>
                        
                        <div class="card-body p-3 d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <p class="card-title mb-0 fw-bold text-truncate small"><%= listing.title %></p>
                                <div class="d-flex align-items-center flex-shrink-0">
                                    <span class="material-symbols-outlined star-icon">star</span>
                                    <span class="extra-small fw-semibold ms-1">New</span>
                                </div>
                            </div>
                            
                            <p class="text-muted extra-small mb-2 text-truncate">
                                <%= listing.location %>, <%= listing.country %>
                            </p>
                            
                            <div class="mt-auto pt-2 border-top">
                                <p class="card-text mb-0">
                                    <span class="fw-bold text-dark fs-6">&#8377; <%= listing.price.toLocaleString("en-IN") %></span> 
                                    <span class="text-secondary fw-light extra-small">night</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
    <div class="text-center mt-4">
   <button id="loadMoreBtn"
        data-offset="<%= listings.length %>"
        class="btn btn-dark">
    Load More
</button>

</div>

</div>

<style>
    /* 1. Force exactly 5 columns on XL screens */
    @media (min-width: 1200px) {
        .row-cols-xl-5 > * {
            flex: 0 0 auto;
            width: 20% !important; 
        }
    }

    /* 2. Compact Landscape Card Styling */
    .air-card {
        background-color: #fff;
        border: 1px solid #eeeeee !important;
        border-radius: 1rem !important; 
        transition: all 0.3s ease-in-out;
        overflow: hidden;
    }

    .air-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08) !important;
        border-color: #ff385c !important;
    }

    /* 3. Image Ratio set to 3/2 (Landscape) */
    .img-container {
        position: relative;
        aspect-ratio: 3 / 2; 
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .listing-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .air-card:hover .listing-img {
        transform: scale(1.06);
    }

    /* 4. UI Accents */
    .wishlist-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        color: white;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.4));
    }

    .category-badge {
        position: absolute;
        bottom: 8px;
        left: 8px;
        background: rgba(255, 255, 255, 0.9);
        color: #222;
        font-size: 9px;
        font-weight: 800;
        padding: 2px 8px;
        border-radius: 4px;
        text-transform: uppercase;
    }

    .extra-small { font-size: 0.78rem; }
    
    .star-icon {
        font-variation-settings: 'FILL' 1, 'wght' 400;
        font-size: 0.9rem;
        color: #222;
    }

    .listing-link { text-decoration: none !important; color: inherit; }

    /* Mobile Responsive Ratio */
    @media (max-width: 576px) {
        .img-container { aspect-ratio: 3 / 2; }
    }
/* Force exactly 2 columns on mobile (below 576px) */
@media (max-width: 575px) {
    .row-cols-2 > * {
        flex: 0 0 auto;
        width: 50% !important;
    }
    
    /* Reduce padding/font size for mobile so 2 cards fit nicely */
    .card-body {
        padding: 0.75rem !important;
    }
    
    .card-title {
        font-size: 0.75rem !important;
    }
}




</style>






<script>
document.addEventListener("DOMContentLoaded", function () {

    const loadBtn = document.getElementById("loadMoreBtn");
    const container = document.getElementById("listingContainer");

    if (!loadBtn) return;

    loadBtn.addEventListener("click", async () => {

        try {
            let offset = parseInt(loadBtn.dataset.offset);

            const response = await fetch(`/api/listings?offset=${offset}&limit=10`);

            if (!response.ok) {
                throw new Error("Network response was not ok");
            }

            const data = await response.json();

            if (data.listings.length === 0) {
                loadBtn.style.display = "none";
                return;
            }

            data.listings.forEach(listing => {

                const card = `
                <div class="col d-flex">
                    <a href="/listings/${listing._id}" class="listing-link w-100">
                        <div class="card h-100 air-card shadow-sm border-0">
                            <div class="img-container">
                                <img src="${listing.image.url}" class="card-img-top listing-img">
                            </div>
                            <div class="card-body p-3">
                                <p class="fw-bold small mb-1">${listing.title}</p>
                                <p class="text-muted extra-small mb-2">
                                    ${listing.location}, ${listing.country}
                                </p>
                                <p class="mb-0">
                                    <span class="fw-bold">â‚¹ ${listing.price.toLocaleString("en-IN")}</span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                `;

                container.insertAdjacentHTML("beforeend", card);
            });

            loadBtn.dataset.offset = offset + data.listings.length;

            if (loadBtn.dataset.offset >= data.total) {
                loadBtn.style.display = "none";
            }

        } catch (error) {
            console.error("Load more failed:", error);
        }

    });

});
</script>

