<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<div class="container py-5 min-vh-100">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <h1 class="display-5 fw-bold text-dark mb-1">My Trips</h1>
            <p class="text-muted mb-0">Manage your past and upcoming adventures with airHost.</p>
        </div>
        <div class="bg-white p-3 rounded-4 shadow-sm border d-flex align-items-center gap-3">
            <div class="icon-box bg-success-subtle text-success p-2 rounded-3">
                <span class="material-symbols-outlined align-middle">payments</span>
            </div>
            <div>
                <small class="text-muted d-block fw-bold">Confirmed Spend</small>
                <span class="fw-bold fs-5 text-dark">
                    ₹<%= (reservations && reservations.length > 0) 
                        ? reservations
                            .filter(res => res.status === 'Confirmed')
                            .reduce((acc, res) => acc + (res.price || 0), 0)
                            .toLocaleString('en-IN') 
                        : '0' %>
                </span>
            </div>
        </div>
    </div>

    <% if (reservations && reservations.length > 0) { %>
        <div class="row g-4">
            <% for(let resv of reservations) { %>
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-5 trip-card">
                        <div class="row g-0">
                            <div class="col-md-3 position-relative overflow-hidden rounded-start-5">
                                 <img src="<%= (resv.listing.image && resv.listing.image.length > 0) ? resv.listing.image[0].url : 'https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1000&auto=format&fit=crop' %>" 
                                       class="img-fluid h-100 w-100" 
                                        style="object-fit: cover; min-height: 200px;"
                                       alt="<%= resv.listing.title %>"
                                       loading="lazy"
                                       onerror="this.src='https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1000&auto=format&fit=crop'">
                                <div class="image-overlay"></div>
                            </div>
                            
                            <div class="col-md-9">
                                <div class="card-body p-4 p-lg-5">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h3 class="fw-bold text-dark mb-1"><%= resv.listing.title %></h3>
                                            <p class="text-muted d-flex align-items-center gap-1 mb-0">
                                                <span class="material-symbols-outlined fs-5">location_on</span>
                                                <%= resv.listing.location %>, <%= resv.listing.country %>
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <span class="status-pill <%= resv.status.toLowerCase() %>">
                                                <%= resv.status %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row bg-light rounded-4 p-3 g-3 mb-4">
                                        <div class="col-sm-4 border-end-md">
                                            <small class="text-uppercase text-muted fw-bold x-small d-block mb-1">Stay Window</small>
                                            <span class="fw-semibold small">
                                                <%= resv.checkIn.toLocaleDateString('en-IN', { day: 'numeric', month: 'short' }) %> - 
                                                <%= resv.checkOut.toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                            </span>
                                        </div>
                                        <div class="col-sm-4 border-end-md">
                                            <small class="text-uppercase text-muted fw-bold x-small d-block mb-1">Transaction</small>
                                            <span class="fw-bold text-dark small">₹<%= resv.price.toLocaleString('en-IN') %></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <small class="text-uppercase text-muted fw-bold x-small d-block mb-1">Booking ID</small>
                                            <code class="text-muted small">#<%= resv._id.toString().slice(-8).toUpperCase() %></code>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                                        <div class="d-flex gap-3 align-items-center">
                                            <a href="/listings/<%= resv.listing._id %>" class="btn btn-dark rounded-pill px-4 btn-sm fw-bold shadow-sm">
                                                View Details
                                            </a>
                                            
                                            <% if (resv.status !== 'Cancelled') { %>
                                                <button type="button" class="btn btn-link text-danger text-decoration-none btn-sm fw-bold p-0 cancel-btn" data-bs-toggle="modal" data-bs-target="#cancelModal<%= resv._id %>">
                                                    Cancel Booking
                                                </button>
                                            <% } else { %>
                                                <span class="text-muted small d-flex align-items-center gap-1">
                                                    <span class="material-symbols-outlined fs-6">history</span>
                                                    Record Maintained
                                                </span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="text-muted x-small">
                                            Recorded: <%= resv.createdAt ? resv.createdAt.toLocaleDateString('en-IN', {day:'2-digit', month:'long', year:'numeric'}) : 'N/A' %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (resv.status !== 'Cancelled') { %>
                <div class="modal fade" id="cancelModal<%= resv._id %>" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow-lg rounded-5">
                            <div class="modal-header border-0 pt-4 px-4">
                                <h5 class="fw-bold mb-0">Cancel Reservation?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body px-4">
                                <div class="p-3 bg-light rounded-4 mb-3 text-start">
                                    <p class="small text-muted mb-1">Property</p>
                                    <p class="fw-bold mb-0 text-dark text-truncate"><%= resv.listing.title %></p>
                                </div>
                                <p class="text-muted small text-start mb-0">
                                    Are you sure? This will update your status to <strong>Cancelled</strong>. The dates will be reopened for other guests.
                                </p>
                            </div>
                            <div class="modal-footer border-0 pb-4 px-4">
                                <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Go Back</button>
                                <form action="/dashboard/trips/<%= resv._id %>/cancel?_method=PUT" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">Confirm</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

            <% } %>
        </div>
    <% } else { %>
        <div class="text-center py-5 bg-white rounded-5 shadow-sm border border-dashed mt-4">
            <span class="material-symbols-outlined display-1 text-muted opacity-25">travel_explore</span>
            <h3 class="mt-3 fw-bold">No trips booked yet!</h3>
            <p class="text-muted mb-4">Start exploring beautiful places to stay and create new memories.</p>
            <a href="/" class="btn btn-danger rounded-pill px-5 py-2 shadow">Find your next stay</a>
        </div>
    <% } %>
</div>

<style>
    :root {
        --confirmed: #059669;
        --pending: #d97706;
        --cancelled: #dc2626;
    }

    .trip-card {
        transition: transform 0.2s ease;
        border: 1px solid rgba(0,0,0,0.05) !important;
        /* Ensure it doesn't clip modal shadows */
        position: relative;
        z-index: 1;
    }

    .status-pill {
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.7rem;
        font-weight: 800;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .status-pill.confirmed { background: #d1fae5; color: var(--confirmed); }
    .status-pill.pending { background: #fef3c7; color: var(--pending); }
    .status-pill.cancelled { background: #fee2e2; color: var(--cancelled); }

    .x-small { font-size: 0.65rem; }
    
    .cancel-btn:hover {
        color: #991b1b !important;
        text-decoration: underline !important;
    }

    .rounded-5 { border-radius: 1.5rem !important; }
    
    @media (min-width: 768px) {
        .border-end-md { border-right: 1px solid #dee2e6; }
        .rounded-start-5 { border-top-left-radius: 1.5rem !important; border-bottom-left-radius: 1.5rem !important; }
    }

    .image-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: linear-gradient(to right, rgba(0,0,0,0.05), transparent);
    }
</style>